<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RichardAI.MainWindow"
        Title="RichardsAI"
        Height="33"
        Width="33"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        WindowStartupLocation="Manual"
        Position="550, 500"
        Topmost="True"
        CanResize="False"
        ShowInTaskbar="False"
        Opacity="0.7"
        Cursor="Hand">
    
    <Grid ClipToBounds="True"
          Width="31"
          Height="31"
          HorizontalAlignment="Center"
          VerticalAlignment="Center">
        
        <!-- Круглый фон с обрезкой -->
        <Border Width="27"
                Height="27"
                CornerRadius="5"
                Background="White"
                BoxShadow="0 0 5 0 #00000030">
            
            <!-- Изображение с дополнительной обрезкой -->
            <Border ClipToBounds="True"
                    CornerRadius="4"
                    Background="White">
                <Image Source="avares://RichardAI/Assets/Richard_Ai_Logo_png.png"
                       Width="23"
                       Height="23"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
        </Border>
    </Grid>
</Window>